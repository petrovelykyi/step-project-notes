<!--Main Navigation-->
<header>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar">
        <a class="navbar-brand" href="/">
            <img src="/images/logo-icon.png" height="54" alt="mdb logo">
            <strong class="brand-name">OTES</strong>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">

                <div class="cssload-loader-walk loaderCssErgaf none" id="css-loader-all">
                    <div></div><div></div><div></div><div></div><div></div>
                </div>

                <li class="nav-item m-1 active">
                    <a id="add-note" class="nav-link">
                        <i class="far fa-sticky-note fa-2x"></i>
                    </a>
                </li>
                <li class="nav-item m-1 active">
                    <a id="add-list" class="nav-link">
                        <i class="far fa-list-alt fa-2x"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="view">
        <div class="board-wrapper">
            <div id="board" class="board">
                <% if (notes.length) { %>
                    <% for (note of notes) {%>
                        <div class="card hoverable item item--note" data-changed="false" data-noteid="<%= note._id %>">
                            <div class="item-body">
                                <label for="title-note">Title:</label>
                                <h4 id="title-note" contenteditable="true"><%= note.title %></h4>
                                <hr>
                                <label for="text-note">Text:</label>
                                <p id="text-note" contenteditable="true"><%= note.text %></p>
                                <hr>
                                <label class="mb-0"><small>Created at:</small></label>
                                <p><%= moment(note.date).locale('uk').format('ddd, Do MMM YYYY, HH:mm:ss') %></p>
                            </div>
                            <div class="item-pin">
                                <div class="item-panel">
                                    <a type="button" class="btn-floating btn-sm deep-orange" data-action="delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
                <% if (lists.length) {%>
                    <% for (list of lists) {%>
                        <div class="card hoverable item item--list" data-changed="false" data-listid="<%= list._id %>">

                            <div class="item-body">
                                <label for="title-list">Title:</label>
                                <h4 id="title-list" contenteditable="true"><%= list.title %></h4>
                                <hr>
                                <label for="task-list">Tasks:</label>
                                <div id="task-list" class="task-list">
                                <% if (list.tasks) { %>
                                    <% for (task of list.tasks) {%>
                                        <div contenteditable="false" class="task-wrapper <%= task.checked %>">
                                            <div class="check-mark"></div>
                                            <p contenteditable="true" class="pr-3"><%= task.taskBody %></p>
                                            <div class="delete-task"></div>
                                        </div>
                                    <% } %>
                                <% } %>
                                </div>
                                <div class="add-task"></div>
                                <hr>
                                <label class="mb-0"><small>Created at:</small></label>
                                <p id="date-created"><%= moment(list.date).locale('uk').format('ddd, Do MMM YYYY, HH:mm:ss') %></p>
                            </div>
                            <div class="item-pin">
                                <div class="item-panel">
                                    <a type="button" class="btn-floating btn-sm deep-orange" data-action="delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</header>
<div class="fader none"></div>
<!--Main Navigation-->
